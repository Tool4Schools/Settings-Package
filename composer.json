{
  "name": "tools4schools/settings",
  "description": "Multi-tenant settings library with db/api drivers, caching, and defaults.",
  "type": "library",
  "license": "MIT",
  "homepage": "https://tools4schools.org",
  "support": {
    "issues": "https://github.com/taftse/tools4schools/issues",
    "source": "https://github.com/taftse/tools4schools"
  },
  "authors": [
    {
      "name": "Timothy Seebus",
      "email": "timothyseebus@tools4schools.org"
    }
  ],
  "require": {
    "php": "^8.2",
    "illuminate/support": "^12.0",
    "illuminate/database": "^12.0",
    "illuminate/cache": "^12.0",
    "illuminate/http": "^12.0"
  },
    "require-dev": {
      "orchestra/testbench": "^10.0",
      "pestphp/pest": "^3.0",
      "pestphp/pest-plugin-laravel": "^3.0",
      "mockery/mockery": "^1.6"
    },
  "autoload": {
    "psr-4": {
      "Tools4Schools\\Settings\\": "src/"
    },
    "files": [
      "src/Helpers/helper.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tools4Schools\\Settings\\Tests\\": "tests"
    }
  },

  "extra": {
    "laravel": {
      "providers": [
        "Tools4Schools\\Settings\\Providers\\SettingsServiceProvider"
      ],
      "aliases": {
        "Setting": "Settings"
      }
    }
  },

  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "minimum-stability": "stable"
}
